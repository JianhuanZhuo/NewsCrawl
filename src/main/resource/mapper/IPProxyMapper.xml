<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.keepfight.graziani.mapper.IPProxyMapper">

    <!--void insert(NewsDao dao) throws Exception;-->
    <insert id="insert" parameterType="NewsDao">
        INSERT INTO news(subtime, pub, title, content, man, new_type, visit, pic, abs)
        VALUE (
        #{subtime}, #{pub}, #{title}, #{content}, #{man}, #{new_type}, #{visit}, #{pic}, #{abs}
        )
        <selectKey keyProperty="id" order="AFTER" resultType="int">
            SELECT last_insert_id();
        </selectKey>
    </insert>

    <!--void update(NewsDao dao) throws Exception;-->
    <insert id="update" parameterType="NewsDao">
        UPDATE news
        SET
            subtime  = #{subtime},
            pub      = #{pub},
            title    = #{title},
            content  = #{content},
            man      = #{man},
            new_type = #{new_type},
            pic      = #{pic},
            visit    = #{visit},
            abs      = #{abs}
        WHERE id = #{id}
    </insert>

    <!---->
    <!--List<NewsDao> selectAll() throws Exception;-->
    <select id="selectAll" resultType="NewsDao">
        SELECT *
        FROM view_news
        ORDER BY subtime DESC
    </select>

    <!--NewsDao selectById(int id) throws Exception;-->
    <select id="selectById" resultType="NewsDao" parameterType="int">
        SELECT *
        FROM view_news_full
        WHERE id = #{id}
    </select>

    <!--void deleteById(int id) throws Exception;-->
    <delete id="deleteById" parameterType="int">
        DELETE FROM news
        WHERE id = #{id}
    </delete>
</mapper>